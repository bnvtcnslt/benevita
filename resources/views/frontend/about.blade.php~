    <style>
        /* Gallery Section Styling */
        .gallery-section {
            background-color: #ffffff;
            padding: 60px 0;
        }

        .gallery-wrapper {
            position: relative;
        }

        .gallery-scroll {
            overflow: hidden;
        }

        .gallery-item {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
        }

        .gallery-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        .gallery-image {
            height: 240px;
            width: 100%;
            object-fit: cover;
        }

        .gallery-controls {
            margin-top: 15px;
        }

        .gallery-prev, .gallery-next {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .gallery-prev:hover, .gallery-next:hover {
            background-color: #0A5640 !important;
            opacity: 0.9;
        }

        /* Responsive Improvements */
        @media (max-width: 768px) {
            .gallery-section {
                padding: 40px 0;
            }

            .gallery-image {
                height: 180px;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set up gallery scrolling functionality
            const galleryWrappers = document.querySelectorAll('.gallery-wrapper');

            galleryWrappers.forEach(wrapper => {
                const scrollContainer = wrapper.querySelector('.row.flex-nowrap');
                const prevBtn = wrapper.querySelector('.gallery-prev');
                const nextBtn = wrapper.querySelector('.gallery-next');

                if (prevBtn && nextBtn && scrollContainer) {
                    // Scroll left button
                    prevBtn.addEventListener('click', function() {
                        scrollContainer.scrollBy({
                            left: -300,
                            behavior: 'smooth'
                        });
                    });

                    // Scroll right button
                    nextBtn.addEventListener('click', function() {
                        scrollContainer.scrollBy({
                            left: 300,
                            behavior: 'smooth'
                        });
                    });

                    // Check if scrolling is needed
                    function checkScroll() {
                        const isScrollable = scrollContainer.scrollWidth > scrollContainer.clientWidth;
                        prevBtn.parentElement.style.display = isScrollable ? 'block' : 'none';
                    }

                    // Initial check
                    checkScroll();

                    // Check on window resize
                    window.addEventListener('resize', checkScroll);
                }
            });
        });
    </script>
@endsection
